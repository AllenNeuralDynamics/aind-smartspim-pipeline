# Start with the official TensorFlow runtime image
FROM tensorflow/tensorflow:2.11.0-gpu

# Set build arguments and environment variables to suppress prompts
ARG DEBIAN_FRONTEND=noninteractive
ENV PATH /opt/conda/bin:$PATH

# Update system and install necessary packages in a single RUN command
RUN apt-get update && \
    apt-get install -y python3.10 python3.10-dev python3.10-distutils wget curl gcc g++ libcublas-12-0 libpcre3 && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Set Python 3.10 as default and install pip
RUN update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.10 1 && \
    wget https://bootstrap.pypa.io/get-pip.py && python3 get-pip.py && rm get-pip.py

# Install Miniconda and create the Conda environment
RUN wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh -O /miniconda.sh && \
    bash /miniconda.sh -b -p /opt/conda && \
    rm /miniconda.sh && \
    conda create -n cell_seg python=3.8 -y && \
    conda clean -afy

# Set the Conda environment as the default
SHELL ["conda", "run", "-n", "cell_seg", "/bin/bash", "-c"]

# Install Python packages with pip in a single command to reduce layers
RUN pip install -U --no-cache-dir \
    git+https://github.com/camilolaiton/cellfinder-core.git@block_seg \
    bokeh==2.4.2 \
    dask[distributed]==2022.11.1 \
    dask_memusage \
    argschema==3.0.4 \
    natsort==8.2.0 \
    astropy==5.2.1 \
    photutils==1.6.0 \
    imlib==0.1.3 \
    zarr==2.13.6 \
    aind-data-schema==1.0.0 \
    aind-ng-link==1.0.6 \
    psutil==5.9.8 \
    jupyter-server-proxy==3.2.2 \
    awscli

# Set default command to bash
CMD ["bash"]
